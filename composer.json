{
  "name": "liplum/flarum-html-widget",
  "description": "A custom HTML widget for Flarum",
  "version": "0.1.0",
  "keywords": [
    "flarum",
    "flarum-extension",
    "flarum-ext",
    "widget",
    "afrux",
    "custom html"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.2",
    "afrux/forum-widgets-core": "^0.1.0"
  },
  "authors": [
    {
      "name": "Liplum",
      "homepage": "https://liplum.net/",
      "email": "Li_plum@outlook.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/liplum/flarum-html-widget/issues",
    "source": "https://github.com/liplum/flarum-html-widget"
  },
  "autoload": {
    "psr-4": {
      "Liplum\\HtmlWidget\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "HTML Widget",
      "category": "feature",
      "icon": {
        "name": "fas fa-code",
        "backgroundColor": "#ffffff",
        "color": "#e34c26"
      }
    }
  }
}
